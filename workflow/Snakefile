rule sbm_pyr:
    #threads: 1 
    input:
        "results/__cythonized__"
    output:
        sbm_path + pyr_path
    params:
        kind = "sbm",
        alg = "pyr",
        com_sizes = lambda wildcards: config['sbm-exps'][int(wildcards.exp)]['sizes'],
